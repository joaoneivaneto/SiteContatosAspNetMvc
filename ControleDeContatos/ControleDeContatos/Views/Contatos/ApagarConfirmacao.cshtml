@model ContatoMoldel
@{
    ViewData["Title"] = "Confirmação apagar o contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Nome)?</h3>
</div>

<div class="d-grid gap-2">
    <a  asp-controller="Contatos" asp-action="Index" class="btn btn-primary">Cancelar exclusão</a>
    <a class=" btn btn-danger btn-block" role="button" asp-route-id="@Model.Id" asp-controller="Contatos" asp-action="Apagar">Confirmar exclusão</a>
</div>